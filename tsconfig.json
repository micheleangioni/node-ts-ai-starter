{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib":["es2018"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "build",
    "rootDir": "./"
  },
  "include": [
    "copyStaticAssets.ts",
    "src/"
  ],
  "exclude": [
    "build",
    "config",
    "node_modules",
    "migrations",
    "seeders",
    "test"
  ]
}
