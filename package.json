{
  "name": "node-ts-starter",
  "version": "1.1.0",
  "description": "Starter kit for Node.js application written in TypeScript",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/src/server.js",
    "serve": "npm start",
    "build": "npm run lint && rm -rf ./build && tsc --strictNullChecks && npm run copy-static-assets",
    "debug": "node --inspect=3001 -r ts-node/register src/server.ts",
    "watch": "nodemon --inspect=3001 src/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest --runInBand --forceExit --verbose",
    "watch-test": "jest --runInBand --verbose --watchAll",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "migrate-revert": "sequelize db:migrate:undo",
    "migrate-revert-all": "sequelize db:migrate:undo:all"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "starter",
    "boilerplate",
    "ddd",
    "domain-driven design",
    "kafka"
  ],
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@micheleangioni/node-messagebrokers": "^0.11.1",
    "@types/express": "^4.17.17",
    "@types/helmet": "4.0.0",
    "@types/node": "^18.15.13",
    "@types/umzug": "^2.3.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "mongoose": "^7.0.4",
    "mysql2": "^2.3.3",
    "sequelize": "^6.31.0",
    "sequelize-cli": "^6.6.0",
    "umzug": "^3.2.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.1",
    "@types/shelljs": "^0.8.12",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-sort-class-members": "^1.14.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "shelljs": "^0.8.5",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
