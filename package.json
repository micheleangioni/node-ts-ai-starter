{
  "name": "node-ts-starter",
  "version": "0.4.0",
  "description": "Starter kit for Node.js application written in TypeScript",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "serve": "npm start",
    "build": "npm run tslint && rm -rf ./build && tsc --strictNullChecks && npm run copy-static-assets",
    "debug": "node --inspect=3001 -r ts-node/register src/server.ts",
    "watch": "nodemon --inspect=3001 src/server.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint": "npm run tslint",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest --runInBand --forceExit --verbose",
    "watch-test": "jest --runInBand --verbose --watchAll",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "migrate-revert": "sequelize db:migrate:undo",
    "migrate-revert-all": "sequelize db:migrate:undo:all"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "starter",
    "boilerplate",
    "ddd",
    "domain-driven design",
    "kafka"
  ],
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@micheleangioni/node-messagebrokers": "^0.4.1",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/mongodb": "^3.3.14",
    "@types/mongoose": "^5.5.41",
    "@types/node": "^10.14.7",
    "@types/umzug": "^2.2.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.8.9",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "umzug": "^2.2.0",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.9.0",
    "@types/shelljs": "^0.8.6",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^10.11.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "shelljs": "^0.8.3",
    "sqlite": "^3.0.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  }
}
