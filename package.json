{
  "name": "node-ts-starter",
  "version": "1.1.0",
  "description": "Starter kit for Node.js application written in TypeScript",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/src/server.js",
    "serve": "npm start",
    "build": "npm run lint && rm -rf ./build && tsc --strictNullChecks && npm run copy-static-assets",
    "debug": "node --inspect=3001 -r ts-node/register src/server.ts",
    "watch": "nodemon --inspect=3001 src/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest --runInBand --forceExit --verbose",
    "watch-test": "jest --runInBand --verbose --watchAll",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "migrate-revert": "sequelize db:migrate:undo",
    "migrate-revert-all": "sequelize db:migrate:undo:all"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "starter",
    "boilerplate",
    "ddd",
    "domain-driven design",
    "kafka"
  ],
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@micheleangioni/node-messagebrokers": "^0.9.4",
    "@types/express": "^4.17.13",
    "@types/helmet": "4.0.0",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^14.18.5",
    "@types/umzug": "^2.3.3",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.13.14",
    "mysql2": "^2.3.3",
    "sequelize": "^5.22.5",
    "sequelize-cli": "^6.4.1",
    "umzug": "^2.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-sort-class-members": "^1.14.1",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "shelljs": "^0.8.5",
    "sqlite3": "^5.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4"
  }
}
