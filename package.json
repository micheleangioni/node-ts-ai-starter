{
  "name": "node-ts-starter",
  "version": "0.1.0",
  "description": "Starter kit for Node.js application written in TypeScript",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "serve": "npm start",
    "build": "npm run tslint && rm -rf ./build && tsc --strictNullChecks && npm run copy-static-assets",
    "debug": "node --inspect=3001 -r ts-node/register src/server.ts",
    "watch": "nodemon --inspect=3001 src/server.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint": "npm run tslint",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest --runInBand --forceExit --verbose",
    "watch-test": "jest --runInBand --verbose --watchAll",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "migrate-revert": "sequelize db:migrate:undo",
    "migrate-revert-all": "sequelize db:migrate:undo:all"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "starter",
    "boilerplate"
  ],
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.43",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/keycloak-connect": "^4.5.1",
    "@types/mongodb": "^3.1.27",
    "@types/mongoose": "^5.5.1",
    "@types/node": "^10.14.7",
    "@types/umzug": "^2.2.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.0",
    "get-keycloak-public-key": "^1.0.3",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "keycloak-connect": "^4.8.3",
    "moment": "^2.24.0",
    "mongoose": "^5.5.9",
    "mysql2": "^1.6.5",
    "sequelize": "^5.8.6",
    "sequelize-cli": "^5.4.0",
    "umzug": "^2.2.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^23.3.14",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^9.4.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "shelljs": "^0.8.3",
    "sqlite": "^3.0.3",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
