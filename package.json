{
  "name": "node-ts-starter",
  "version": "0.1.0",
  "description": "Starter kit for Node.js application written in TypeScript",
  "main": "build/server.js",
  "scripts": {
    "start": "tsc && node build/server.js",
    "run": "node build/server.js",
    "debug": "node --inspect=3001 -r ts-node/register src/server.ts",
    "watch": "node_modules/nodemon/bin/nodemon.js --inspect=3001 src/server.ts",
    "test": "jest --forceExit",
    "test:watch": "jest --watch"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "starter",
    "boilerplate"
  ],
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.2.11",
    "@types/node": "^10.9.4",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.13",
    "validator": "^10.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^23.3.1",
    "@types/supertest": "^2.0.6",
    "@types/validator": "^9.4.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
